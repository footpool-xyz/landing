---
import Container from "./Container.astro";
---

<footer class="py-10 md:py-12">
    <Container>
        <div class="flex flex-wrap justify-between items-start text-gray-600">
            <!-- Columna Izquierda: Links -->
            <div class="w-full md:w-1/3 mb-4 md:mb-0">
                <ul class="flex flex-col list-none text-gray-800 dark:text-gray-200">
                    <li class="mb-2"><a href="/" class="transition hover:text-secondary">Home</a></li>
                    <li class="mb-2"><a href="/#about" class="transition hover:text-secondary">About</a></li>
                    <li class="mb-2"><a href="/#features" class="transition hover:text-secondary">Features</a></li>
                    <li class="mb-2"><a href="/#how-it-works" class="transition hover:text-secondary">How It Works</a></li>
                    <li class="mb-2"><a href="https://docs.footpool.xyz" class="transition hover:text-secondary">Docs</a></li>
                </ul>
            </div>

            <!-- Columna Central: Términos y Copyright -->
            <div class="w-full md:w-1/3 text-center mb-4 md:mb-0 text-gray-600">
                <span class="block  dark:text-gray-400">&copy; 2024 FootPool. All rights reserved.</span>
                <span class="flex justify-center space-x-4 mt-2">
                    <a href="#" class="font-medium text-gray-800 dark:text-gray-200 hover:underline">Terms of Use</a>
                    <a href="#" class="font-medium text-gray-800 dark:text-gray-200 hover:underline">Privacy Policy</a>
                </span>
                <span class="block mt-2">
                    Need help? <a href="#" class="font-semibold text-gray-800 dark:text-white">Contact Us</a>
                </span>
            </div>

            <!-- Columna Derecha: Redes Sociales -->
            <div class="w-full md:w-1/3 mb-4 md:mb-0 flex justify-end">
                <div class="flex space-x-6">
                    <a target="_blank" href="https://github.com/footpool-xyz" class="flex items-center space-x-2 transition hover:text-secondary">
